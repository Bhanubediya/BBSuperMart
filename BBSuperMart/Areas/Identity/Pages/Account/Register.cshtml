@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="container border box-shadow "style="
background: #CECECE;
background: -webkit-linear-gradient(top left, #CECECE, #F9F9F9);
background: -moz-linear-gradient(top left, #CECECE, #F9F9F9);
background: linear-gradient(to bottom right, #CECECE, #F9F9F9); 
border-radius:1em;
">
    @*<h1 class="pb-2 text-black-50 text-center">@ViewData["Title"]</h1>*@

    <div class="row pt-4">
        <div class="col-md-4">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4 class="text-center">Create a new account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.FullName" ></label>
                    <input asp-for="Input.FullName" placeholder="Enter your fullname" class="form-control" />
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" placeholder="Enter your Email"  class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" placeholder="Enter your Email-Id"  class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" placeholder="Enter your Password"  class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" placeholder="Enter your Password again"  class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-outline-success mb-3">Register</button>
            </form>
        </div>
        <div class="col-md-6 col-md-offset-2 " >
            <section >
                <h4 class="text-center">BB<span class="text-secondary">-</span><span class="text-success font-weight-bolder">Mart</span></h4>
                <hr />
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div class="text-center">
                          <img src=""/>
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div>
                                <p>
                                    @foreach (var provider in Model.ExternalLogins)
                                    {
                                        <button type="submit" class="btn btn-outline-success" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                    }
                                </p>
                            </div>
                        </form>
                    }
                }
            </section>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
