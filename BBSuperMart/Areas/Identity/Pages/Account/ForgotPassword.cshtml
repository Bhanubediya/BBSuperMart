@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<div class="container border box-shadow " style="
background: #CECECE;
background: -webkit-linear-gradient(top left, #CECECE, #F9F9F9);
background: -moz-linear-gradient(top left, #CECECE, #F9F9F9);
background: linear-gradient(to bottom right, #CECECE, #F9F9F9);
border-radius:1em;">
    <h1 class="text-black-50">@ViewData["Title"]</h1>

    <hr />
    <h4 class="text-secondary">Enter your email-Id.</h4>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mb-3">Submit</button>
            </form>
        </div>
    </div>
</div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
