@model BBSuperMart.Models.ViewModels.HomeVM
    <div id="carouselExampleControls" class="carousel slide img-fluid" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="https://www.thefruitshop.in/images/header3/slider1.png" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://www.thefruitshop.in/images/header3/slider4.jpg" alt="Second slide">
            </div>

        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="text-center text-black-50 pt-4 pb-3" style="background: linear-gradient(to top, #e6e9f0 0%, #eef1f5 100%); ">
        <span style="cursor:pointer"> <i class="fa-solid fa-arrow-down-a-z"></i> price</span>
        <span style="cursor:pointer" class="pl-5"><i class="fa-solid fa-arrow-up-a-z"></i> price</span>
        <span style="cursor:pointer" class="pl-5">  <i class="fa-solid fa-filter"></i> categories</span>

    </div>
    <div class="  text-center ">
        <ul class="list-group-flush d-inline-flex mx-4 " style="list-style:none; ">
            <li class=" pt-3 mr-2"><button class="btn btn-dark filter-button   " data-filter="all">Categories</button></li>
            @foreach (var obj in Model.Categories)
            {
                <li class=" pt-3 mr-2"><button class="btn btn-outline-warning filter-button   " data-filter="@obj.CatName.Replace(' ','_')">@obj.CatName </button></li>
               
            }
        </ul>
    </div>

    <div class="overflow-hidden ">
       
        

        
            <div class="row mt-5 ml-4">


                @foreach (var prod in Model.Products)
                {

                    <partial name="_ProductsCards" model="prod" />
                }
            </div>
        </div>
  

    @section Scripts{
        <script>
            $(document).ready(function () {
                $(".filter-button").click(function () {
                    var value = $(this).attr('data-filter');
                    if (value == "all") {
                        $('.filter').show('1000');
                    }
                    else {
                        $(".filter").not('.' + value).hide("3000");
                        $(".filter").filter('.' + value).show("3000");
                    }
                });
            });
        </script>
    }