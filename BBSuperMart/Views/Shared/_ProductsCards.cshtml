@model BBSuperMart.Models.Products
    
    <div class="col-12 col-md-6 col-lg-4 filter @Model.Category.CatName.Replace(' ','_')">
       <a asp-action="details" asp-route-ProductId="@Model.ProductId" class="text-decoration-none"> <div class="card mb-3 bg-light" style="width: 16.7rem;cursor:pointer" >
            <div class="text-right  text-secondary pr-3 pt-2"><i class="fa-solid fa-heart fa-xl"></i></div>
            <div class="text-center pt-3"><img src="@Model.image" class="card-img-top w-50 " alt="..."></div>
            <div class="card-body ">
                <div class="text-center pb-2"> <strong class="card-title text-dark">@Model.title</strong></div>
                <div class="text-left pl-2 card-title text-black-50">
                    @Model.quan_grams
                  
                </div>
                <hr />
               

                <div class="text-right">  <span style="padding-right:7em"><strong class="text-dark ">₹</strong><span class="text-dark text-right">@Model.price</span></span><a class="btn btn-outline-success  " asp-route-ProductId="@Model.ProductId" asp-action="Upsert"><span><i class="fa-solid fa-cart-plus "></i> Add</span></a></div>


            </div>
        </div></a>
    </div>
    
